{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "style": {
                "noNonNullAssertion": "off"
            },
            "correctness": {
                "noUnusedImports": "error"
            },
            "complexity": {
                "noStaticOnlyClass": "off",
                "noThisInStatic": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 120
    },
    "javascript": {
        "formatter": {
            "indentStyle": "space",
            "indentWidth": 4
        }
    },
    "files": {
        "ignore": ["node_modules/**/*", "docker/**/*"]
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "master"
    }
}
